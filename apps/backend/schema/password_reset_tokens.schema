# frozen_string_literal: true

# -*- mode: ruby -*-
# vi: set ft=ruby :

create_table 'password_reset_tokens', id: { type: :string, limit: 255 }, force: :cascade do |t|
  t.references :user, type: :uuid, null: false, foreign_key: true
  t.string    'token', limit: 255, null: false
  t.datetime  'expires_at', null: false
end

add_index 'password_reset_tokens', ['token'], unique: true, name: 'index_password_reset_tokens_on_token'
